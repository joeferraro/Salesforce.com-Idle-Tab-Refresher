{
  "manifest_version": 2,
  "name": "Salesforce.com Idle Tab Refresher",
  "description": "This extension will refresh your Salesforce.com browser tabs when they're idle for a certain amount of time (default 10 minutes)",
  "version": "0.0.2",
  "permissions": [
    "tabs", "storage"
  ],
  "browser_action": {
      "default_icon": "icon48.png"
    },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://*.my.salesforce.com/*", "http://*.salesforce.com/*", "https://*.visual.force.com/*"],
      "js": ["jquery.js", "contentscript.js"]
    }
  ]
}